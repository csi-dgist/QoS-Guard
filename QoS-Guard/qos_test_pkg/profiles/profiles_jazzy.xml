<?xml version="1.0" encoding="UTF-8"?>
<!-- Jazzy style: data_writer/data_reader (DDS standard terms) -->
<dds xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
    <profiles>
        <!-- Topic B: sensor_pub - Jazzy data_writer -->
        <data_writer profile_name="sensor_datawriter_profile">
            <topic>
                <name>/sensor_data</name>
                <historyQos>
                    <kind>KEEP_LAST</kind>
                    <depth>15</depth>
                </historyQos>
                <resourceLimitsQos>
                    <max_samples>80</max_samples>
                    <max_instances>5</max_instances>
                    <max_samples_per_instance>16</max_samples_per_instance>
                    <allocated_samples>20</allocated_samples>
                    <extra_samples>5</extra_samples>
                </resourceLimitsQos>
            </topic>
            <qos>
                <durability><kind>TRANSIENT_LOCAL</kind></durability>
                <reliability><kind>RELIABLE</kind></reliability>
            </qos>
        </data_writer>

        <!-- Topic C: map publishers - Jazzy data_writer (for 2 pubs) -->
        <data_writer profile_name="map_datawriter_profile_1">
            <topic>
                <name>/map</name>
                <historyQos>
                    <kind>KEEP_LAST</kind>
                    <depth>1</depth>
                </historyQos>
                <resourceLimitsQos>
                    <max_samples>10</max_samples>
                    <max_instances>1</max_instances>
                    <max_samples_per_instance>1</max_samples_per_instance>
                </resourceLimitsQos>
            </topic>
            <qos>
                <durability><kind>TRANSIENT_LOCAL</kind></durability>
                <reliability><kind>RELIABLE</kind></reliability>
            </qos>
        </data_writer>

        <data_writer profile_name="map_datawriter_profile_2">
            <topic>
                <name>/map</name>
                <historyQos>
                    <kind>KEEP_LAST</kind>
                    <depth>2</depth>
                </historyQos>
                <resourceLimitsQos>
                    <max_samples>15</max_samples>
                    <max_instances>1</max_instances>
                    <max_samples_per_instance>2</max_samples_per_instance>
                </resourceLimitsQos>
            </topic>
            <qos>
                <durability><kind>TRANSIENT_LOCAL</kind></durability>
                <reliability><kind>BEST_EFFORT</kind></reliability>
            </qos>
        </data_writer>

        <!-- Topic B: sensor subs - Jazzy data_reader (3 different QoS) -->
        <data_reader profile_name="sensor_datareader_profile_1">
            <topic>
                <name>/sensor_data</name>
                <historyQos>
                    <kind>KEEP_LAST</kind>
                    <depth>5</depth>
                </historyQos>
                <resourceLimitsQos>
                    <max_samples>50</max_samples>
                    <max_instances>3</max_instances>
                    <max_samples_per_instance>10</max_samples_per_instance>
                </resourceLimitsQos>
            </topic>
            <qos>
                <durability><kind>VOLATILE</kind></durability>
                <reliability><kind>RELIABLE</kind></reliability>
            </qos>
        </data_reader>

        <data_reader profile_name="sensor_datareader_profile_2">
            <topic>
                <name>/sensor_data</name>
                <historyQos>
                    <kind>KEEP_LAST</kind>
                    <depth>3</depth>
                </historyQos>
                <resourceLimitsQos>
                    <max_samples>30</max_samples>
                    <max_instances>2</max_instances>
                    <max_samples_per_instance>5</max_samples_per_instance>
                </resourceLimitsQos>
            </topic>
            <qos>
                <durability><kind>VOLATILE</kind></durability>
                <reliability><kind>BEST_EFFORT</kind></reliability>
            </qos>
        </data_reader>

        <data_reader profile_name="sensor_datareader_profile_3">
            <topic>
                <name>/sensor_data</name>
                <historyQos>
                    <kind>KEEP_LAST</kind>
                    <depth>8</depth>
                </historyQos>
                <resourceLimitsQos>
                    <max_samples>60</max_samples>
                    <max_instances>4</max_instances>
                    <max_samples_per_instance>15</max_samples_per_instance>
                </resourceLimitsQos>
            </topic>
            <qos>
                <durability><kind>TRANSIENT_LOCAL</kind></durability>
                <reliability><kind>RELIABLE</kind></reliability>
            </qos>
        </data_reader>
    </profiles>
</dds>
